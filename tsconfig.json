{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": false,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es6", "es7", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "outDir": "build",
    "paths": { "app/*": ["src/*"] },
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["build", "node_modules"]
}
